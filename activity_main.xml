<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="24dp"
    android:background="#0D172A"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/moon3"
        android:layout_marginTop="60dp"
        android:contentDescription="Sleeper App Logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SleePT"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="50dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디 (ID)"
        android:textColorHint="#A0B1C4"
        app:hintTextColor="#7FFFD4"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeColor="#7FFFD4"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        app:boxBackgroundColor="#00000000" >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호 (Password)"
        android:textColorHint="#A0B1C4"
        app:hintTextColor="#7FFFD4"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="2dp"
        app:boxStrokeColor="#7FFFD4"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#A0B1C4"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        app:boxBackgroundColor="#00000000"
        android:layout_marginTop="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtPe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#FFFFFF"
            android:background="@android:color/transparent"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mainLoginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="18sp"
        android:textColor="#7FFFD4"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="#7FFFD4"
        app:strokeWidth="2dp"
        app:cornerRadius="8dp"
        android:layout_marginTop="40dp"
        android:padding="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mainJoinBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="18sp"
        android:textColor="@color/pro_sleep_green"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/pro_sleep_green"
        app:strokeWidth="2dp"
        app:cornerRadius="8dp"
        android:layout_marginTop="16dp"
        android:padding="16dp" />


</LinearLayout>