<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0D172A"
    tools:context=".Menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 수면 리포트"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp"/>

            <!-- 1. 메인 스코어 (가장 크게 강조) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#16223A"
                app:strokeColor="#7FFFD4"
                app:strokeWidth="2dp"
                app:cardCornerRadius="24dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최근 수면 점수"
                        android:textColor="#A0B1C4"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvTodayScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="--점"
                        android:textColor="#7FFFD4"
                        android:textSize="56sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 2. 기능 메뉴 그리드 (2열 배치) -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false">

                <!-- (1) Gemini 분석 (초록색) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:layout_marginEnd="12dp">

                    <!-- 동그란 버튼 (CardView) -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/analyze"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#16223A"
                        app:strokeColor="@color/pro_sleep_green"
                        app:strokeWidth="2dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:src="@drawable/ic_smart_toy"
                            app:tint="@color/pro_sleep_green"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gemini 분석"
                        android:textColor="@color/pro_sleep_green"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- (2) 수면 캘린더 (노란색) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:layout_marginStart="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/calendar"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#16223A"
                        app:strokeColor="@color/pro_sleep_yellow"
                        app:strokeWidth="2dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:src="@drawable/ic_calendar_today"
                            app:tint="@color/pro_sleep_yellow"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수면 캘린더"
                        android:textColor="@color/pro_sleep_yellow"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- (3) 알람 설정 (보라색) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:layout_marginEnd="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/alarm"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#16223A"
                        app:strokeColor="@color/pro_sleep_purple"
                        app:strokeWidth="2dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:src="@drawable/ic_alarm"
                            app:tint="@color/pro_sleep_purple"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알람 설정"
                        android:textColor="@color/pro_sleep_purple"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- (4) 수면 팁 (주황색) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp"
                    android:layout_marginStart="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/tip"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#16223A"
                        app:strokeColor="@color/pro_sleep_orange"
                        app:strokeWidth="2dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:src="@drawable/ic_lightbulb"
                            app:tint="@color/pro_sleep_orange"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수면 팁"
                        android:textColor="@color/pro_sleep_orange"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/AiTip"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#16223A"
                        app:strokeColor="#E91E63"
                        app:strokeWidth="2dp"
                        android:clickable="true"
                        android:focusable="true">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp"
                            android:src="@drawable/ic_sound_wave"
                            app:tint="#E91E63"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI 수면 감지"
                        android:textColor="#E91E63"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="labeled"
        android:background="#16223A" />

</LinearLayout>